<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/sponsors_browse_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/sponsors_browse_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            card_view:text="Sponsor Główny"
            android:fontFamily="@font/open_sans_bold"/>

        <TextView
            android:id="@+id/sponsors_browse_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:textSize="@dimen/font_size_medium"
            android:textStyle="bold"
            card_view:text="Nazwa firmy"
            android:fontFamily="@font/open_sans_bold"/>

        <ImageView
            android:id="@+id/sponsors_browse_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitStart"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/sponsors_browse_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:fontFamily="@font/open_sans_regular"/>

    </LinearLayout>


</android.support.v7.widget.CardView>